{
  "name": "tasit-contracts",
  "version": "0.0.19",
  "description": "",
  "main": "dist/index",
  "module": "dist/tasit-contracts.esm.js",
  "typings": "dist/index.d.ts",
  "keywords": [
    "ethereum",
    "dapp",
    "truffle",
    "ganache",
    "solidity"
  ],
  "author": "Tasit Labs",
  "homepage": "https://github.com/tasitlabs/tasit-sdk/tree/develop/packages/contracts#readme",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tasitlabs/tasit-sdk.git"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf build/ dist/ && npm run clean:3rd-parties",
    "compile": "npx babel src --out-dir dist --ignore src/*.test.js,src/**/*.test.js",
    "migrate": "npx truffle migrate && npm run populate-contracts",
    "migrate:rinkeby": "npx truffle migrate --network rinkeby && npm run populate-contracts:rinkeby",
    "prepare": "npm run install:3rd-parties && npm run compile",
    "test:truffle": "npx truffle test",
    "install:3rd-parties": "./3rd-parties/run_on_all.sh install `pwd`",
    "compile:3rd-parties": "./3rd-parties/run_on_all.sh compile `pwd`",
    "clean:3rd-parties": "./3rd-parties/run_on_all.sh clean `pwd`",
    "populate-contracts": "NETWORK=development npx ts-node src/scripts/populateDecentralandContracts.ts",
    "populate-contracts:rinkeby": "NETWORK=rinkeby npx ts-node src/scripts/populateDecentralandContracts.ts",
    "start": "tsdx watch",
    "build": "tsdx build",
    "test:tsdx": "tsdx test",
    "lint": "tsdx lint src",
    "test": "npm run test:truffle",
    "update": "npx ncu",
    "update:write": "npm run update -- -u"
  },
  "bugs": {
    "url": "https://github.com/tasitlabs/tasit-sdk/issues"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/node": "^7.8.7",
    "@babel/preset-typescript": "^7.9.0",
    "@truffle/hdwallet-provider": "^1.0.34",
    "truffle-hdwallet-provider": "1.0.17",
    "husky": "^4.2.5",
    "node-fetch": "^2.6.0",
    "npm-check-updates": "^4.1.2",
    "truffle": "^5.1.22",
    "truffle-typings": "^1.0.8",
    "ts-node": "^8.9.0",
    "tsdx": "^0.13.2",
    "tslib": "^1.11.1",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "zeppelin-solidity": "1.12.0",
    "openzeppelin-solidity": "^2.5.0"
  }
}
