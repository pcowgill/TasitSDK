{
  "name": "@tasit/action",
  "version": "0.0.28",
  "description": "A library for using Ethereum smart contracts that abstracts away the low-level blockchain-related details so that developers can focus on the core business logic for their app",
  "main": "dist/index",
  "module": "dist/action.esm.js",
  "typings": "dist/index.d.ts",
  "keywords": [
    "ethereum",
    "dapp",
    "react",
    "native"
  ],
  "author": "Tasit Labs",
  "homepage": "https://tasit.dev",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tasitlabs/tasit-sdk.git"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "prepare": "npm run build",
    "start": "npx tsdx watch",
    "build": "npx tsdx build",
    "test:tsdx": "npx tsdx test",
    "lint": "npx tsdx lint src",
    "test:mocha-tsnode": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' npx mocha \"src/**/*.test.ts\" --recursive --require ts-node/register --file src/testHelpers/mochaSetup.ts --timeout 8000",
    "test": "npm run test:mocha-tsnode",
    "update": "npx ncu",
    "update:write": "npm run update -- -u"
  },
  "bugs": {
    "url": "https://github.com/tasitlabs/tasit-sdk/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "ethers": "^4.0.47"
  },
  "devDependencies": {
    "@tasit/account": "^0.0.28",
    "@tasit/contracts": "^0.0.28",
    "@types/chai": "^4.2.11",
    "@types/chai-as-promised": "^7.1.2",
    "@types/mocha": "^7.0.2",
    "@types/node": "^14.0.10",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "mocha": "^7.2.0",
    "node-fetch": "^2.6.0",
    "npm-check-updates": "^6.0.1",
    "sinon": "^9.0.2",
    "ts-node": "^8.10.2",
    "tsdx": "^0.13.2",
    "tslib": "^2.0.0",
    "typescript": "^3.9.3"
  },
  "gitHead": "fc17ed73b2c70e3f94dcc4b23ffbf502fa16b0ab"
}
